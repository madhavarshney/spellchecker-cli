{
  "name": "spellchecker-cli",
  "version": "3.1.0",
  "description": "A command-line tool for spellchecking files.",
  "main": "./lib/index.js",
  "bin": {
    "spellchecker": "./lib/index.js"
  },
  "scripts": {
    "ci": "npm run spellchecker && npm run lint && npm run build && npm run test",
    "build": "tsc",
    "watch": "tsc -w",
    "lint": "tslint -p . -t codeFrame",
    "spellchecker": "ts-node ./src/ --files \"**/*.md\" \"!test/**/*.md\" --dictionaries dictionary.txt",
    "test": "mocha -r ts-node/register -r chai/register-should ./test/**/**.ts"
  },
  "author": "Thomas Broadley <buriedunderbooks@hotmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git@github.com:tbroadley/spellchecker-cli.git"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "command-line-args": "^5.0.2",
    "command-line-usage": "^5.0.4",
    "dictionary-en-au": "^2.0.0",
    "dictionary-en-ca": "^2.0.0",
    "dictionary-en-gb": "^2.0.0",
    "dictionary-en-us": "^2.0.0",
    "dictionary-en-za": "^2.0.0",
    "fs-extra": "^6.0.1",
    "globby": "^8.0.1",
    "lodash": "^4.17.10",
    "remark": "^9.0.0",
    "remark-gemoji-to-emoji": "^1.1.0",
    "remark-retext": "^3.1.0",
    "retext": "^5.0.0",
    "retext-indefinite-article": "^1.1.4",
    "retext-repeated-words": "^1.2.1",
    "retext-spell": "^2.3.1",
    "retext-syntax-mentions": "^1.1.4",
    "retext-syntax-urls": "^1.0.0",
    "vfile": "^3.0.0",
    "vfile-reporter": "^5.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.4",
    "@types/command-line-args": "^5.0.0",
    "@types/command-line-usage": "^5.0.1",
    "@types/fs-extra": "^5.0.3",
    "@types/lodash": "^4.14.110",
    "@types/mocha": "^5.2.4",
    "@types/node": "^10.5.1",
    "@types/vfile": "^2.2.2",
    "chai": "^4.1.2",
    "mocha": "^5.2.0",
    "mocha.parallel": "0.15.5",
    "ts-node": "^7.0.0",
    "tslint": "^5.10.0",
    "typescript": "^2.9.2"
  }
}
